{
  "name": "Avocado",
  "version": "0.1.0",
  "author": {
    "name": "Justyna Rachowicz",
    "email": "mrowa44+avocado@gmail.com"
  },
  "description": "Avocado - productivity enhancer",
  "private": true,
  "dependencies": {
    "classnames": "^2.2.5",
    "electron-context-menu": "^0.9.1",
    "electron-is-dev": "^0.2.0",
    "electron-store": "^1.1.0",
    "lodash.remove": "^4.7.0",
    "moment": "^2.18.1",
    "mousetrap": "^1.6.1",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1"
  },
  "devDependencies": {
    "concurrently": "^3.5.0",
    "electron": "^1.6.11",
    "electron-builder": "^19.13.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-react": "^7.0.1",
    "node-sass-chokidar": "0.0.2",
    "npm-run-all": "^4.0.2",
    "pre-push": "^0.1.1",
    "react-scripts": "1.0.7",
    "sass-lint": "^1.10.2",
    "wait-on": "^2.0.2"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "pre-push": [
    "lint",
    "sass-lint"
  ],
  "build": {
    "appId": "com.example.electron-cra",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories":{
      "buildResources": "assets"
    }
  },
  "scripts": {
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "lint": "eslint .",
    "sass-lint": "sass-lint -c .sass-lint.yml 'src/*.scss' -v",
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "start-js": "react-scripts start",
    "start": "BROWSER=none npm-run-all -p watch-css start-js",
    "build": "npm run build-css && react-scripts build",
    "electron-pack": "build --em.main=build/electron.js",
    "preelectron-pack": "yarn build"
  }
}
